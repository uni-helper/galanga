{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
      "galanga": ["@/node_modules/galanga/src/index.ts"],
    },
		"rootDir": "./src",
    "outDir": "./esm",
		"strict":false,
    "noEmitOnError":false,
		"declaration": true,
		"declarationDir": "./types",
		"removeComments": false,
		"allowSyntheticDefaultImports": true,
	},
	"include": [
		"src//*.ts"
	],
	"exclude": [
		"node_modules",
		"/*.d.ts",
		"/types/*.d.ts"
	]
}